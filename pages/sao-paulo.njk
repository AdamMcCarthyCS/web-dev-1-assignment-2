                        <div class="is-flex is-align-items-center is-gap-1">
                            <figure class="image is-64x64 is-inline-block">
                                <img src="{{ week.mon.img }}" alt="{{ week.mon.imgAlt }}">
                            </figure>
                            <p class="is-size-4 has-text-weight-bold">{{ week.mon.desc }}</p>
