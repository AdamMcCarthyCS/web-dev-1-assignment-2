                        <div class="is-flex is-align-items-center is-gap-1">
                            <figure class="image is-64x64 is-inline-block">
                                <img src="{{ week.today.img }}" alt="{{ week.today.imgAlt}}">
                            </figure>
                            <p class="is-size-4 has-text-weight-bold">{{ week.today.desc}}</p>
                        </div>
                        <p class="has-text-weight-bold is-size-4">{{ week.today.temp }}&deg;C</p>
                    </article>
                    <div class="card-footer"></div> <!-- card footers included to make dividing line between days-->
                    <!-- END FORECAST DAY-->
                    
